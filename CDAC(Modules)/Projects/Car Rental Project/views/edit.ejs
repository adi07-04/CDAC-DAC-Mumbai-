<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
    <title>Update Data</title>
  </head>
  <body>
    <div class="container my-2">
      <h1 class="h1 text-center">Update Data</h1>

      <!-- Posting data to /update endpoint -->
       <form id="myForm" action="http://localhost:3000/final-update" method="post">
        <input type="hidden" value="<%= result.id %>" name="hidden_id" />

        <!-- Car Model Number -->
         <div class="mb-3">
          <label class="form-label">Car Model Number</label>
          <input
            type="text"
            class="form-control"
            value="<%= result.car_model_no %>"
            name="car_model_no"
          />
        </div>

        <!-- First Name -->
         <div class="mb-3">
          <label class="form-label">First Name</label>
          <input
            type="text"
            class="form-control"
            value="<%= result.first_name %>"
            name="first_name"
          />
        </div> 

        <!-- Last Name -->
        <div class="mb-3">
          <label class="form-label">Last Name</label>
          <input
            type="text"
            class="form-control"
            value="<%= result.last_name %>"
            name="last_name"
          />
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            value="<%= result.email %>"
            name="email"
          />
        </div> 

        <!-- Phone Number -->
        <div class="mb-3">
          <label class="form-label">Phone</label>
          <input
            type="tel"
            class="form-control"
            value="<%= result.phone_no %>"
            name="phone"
          />
        </div> 

        <!-- City -->
        <div class="mb-3">
          <label class="form-label">City</label>
          <input
            type="text"
            class="form-control"
            value="<%= result.address %>"
            name="city"
          />
        </div> 

        <!-- Start Date -->
         <div class="mb-3">
          <label class="form-label">Start Date</label>
          <input
            type="datetime-local"
            class="form-control"
            value="<%= result.pickup_date ? result.pickup_date.toISOString().slice(0, 16) : '' %>"
            name="start_date"
          />
        </div> 

        <!-- End Date -->
         <div class="mb-3">
          <label class="form-label">End Date</label>
          <input
            type="datetime-local"
            class="form-control"
            value="<%= result.return_date ? result.return_date.toISOString().slice(0, 16) : '' %>"

            name="end_date"
          />
        </div> 

        <!-- Buttons -->
         <button type="submit" class="btn btn-primary">Update</button>
         
        <button type="submit" class="btn btn-outline-info">
           <a href="/data">Back</a>
        </button>
      </form> 
     
    </div>
  </body>
</html>
